@model List<MvcKutuphane.Models.Entity.TBLHAREKET>

@{
    ViewBag.Title = "KitapGecmis";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Başlık -->
<body style="background-color: gainsboro; min-height: 100vh; padding-top: 50px;">

    <div class="text-center mb-4">
        <h2 class="mt-3 font-weight-bold" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #393131;">
            Üye: @ViewBag.uyead
        </h2>
    </div>
    <!-- Tablo -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="table-responsive shadow-lg p-4 mb-5 bg-white rounded">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Kitap Adı</th>
                                <th>Personel</th>
                                <th>Alış Tarihi</th>
                                <th>İade Tarihim</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TBLKITAP.AD</td>
                                    <td>@item.TBLPERSONEL.PERSONAL</td>
                                    <td>@Convert.ToDateTime(item.ALISTARIH).ToString("dd/MM/yyyyy")</td>
                                    <td>@Convert.ToDateTime(item.IADETARIH).ToString("dd/MM/yyyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">

</body>
