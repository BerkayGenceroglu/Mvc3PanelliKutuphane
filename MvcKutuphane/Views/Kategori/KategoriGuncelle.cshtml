@model MvcKutuphane.Models.Entity.TBLKATEGORI

@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="text-center my-4">
    <h2 class="fw-bold text-primary">Kategori Güncelleme Sayfası</h2>
</div>

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div class="p-4 border rounded shadow-sm bg-light" style="max-width: 600px; margin: auto;">
        <div class="mb-3">
            @Html.LabelFor(x => x.ID, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.AD, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control", placeholder = "Kategori adını güncelleyin" })
        </div>
        <button type="submit" class="btn btn-primary w-100 fw-bold">Kategori Güncelle</button>
    </div>
}


