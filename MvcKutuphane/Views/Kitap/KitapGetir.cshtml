@model MvcKutuphane.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="text-center my-4">
    <h2 class="fw-bold text-primary">Kitap Güncelleme Sayfası</h2>
</div>

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div class="p-4 border rounded shadow-sm bg-light" style="max-width: 600px; margin: auto;">
        <div class="mb-3">
            @Html.LabelFor(x => x.ID, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control", })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.AD, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.KATEGORI, new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(k => k.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.Category, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.YAZAR, new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.YAZAR, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.BASIMYIL, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.BASIMYIL, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.YAYINEVI, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.YAYINEVI, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.SAYFA, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.SAYFA, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary w-100 fw-bold">Kitap Güncelle</button>
    </div>
}
