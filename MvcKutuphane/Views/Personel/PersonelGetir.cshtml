@model  MvcKutuphane.Models.Entity.TBLPERSONEL
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="text-center my-4">
    <h2 class="fw-bold text-primary">Personel Güncelleme Sayfası</h2>
</div>

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <div class="p-4 border rounded shadow-sm bg-light" style="max-width: 600px; margin: auto;">
        <div class="mb-3">
            @Html.LabelFor(x => x.ID, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control", })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.PERSONAL, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.PERSONAL, new { @class = "form-control", })
        </div>
        <button type="submit" class="btn btn-primary w-100 fw-bold">Personeli Güncelle</button>
    </div>
}

