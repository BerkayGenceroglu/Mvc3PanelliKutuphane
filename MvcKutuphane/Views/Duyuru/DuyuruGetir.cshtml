@model MvcKutuphane.Models.Entity.TBLDUYURULAR

@{
    ViewBag.Title = "DuyuruGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="text-center my-4">
    <h2 class="fw-bold text-primary">Duyuru Güncelleme Sayfası</h2>
</div>

@using (Html.BeginForm("DuyuruGetir", "Duyuru", FormMethod.Post))
{
    <div class="p-4 border rounded shadow-sm bg-light" style="max-width: 600px; margin: auto;">
        <div class="mb-3">
            @Html.LabelFor(x => x.ID, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control", })
        </div>  <div class="mb-3">
            @Html.LabelFor(x => x.KATEGORI, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.KATEGORI, new { @class = "form-control", })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.ICERIK, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(x => x.ICERIK, new { @class = "form-control", })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.TARIH, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(x => x.TARIH, "{0:dd.MM.yyyy}", new { @class = "form-control", })
        </div>
        <button type="submit" class="btn btn-primary w-100 fw-bold">Güncelleme Yap</button>
    </div>
}

