@{
    ViewBag.Title = "Kitap Grafiği";
    Layout = "~/Views/Shared/Layout.cshtml";
}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        .chart-container {
            max-width: 900px;
            margin: 40px auto;
            background: white;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            padding: 30px;
            font-family: 'Poppins', sans-serif;
        }

        .chart-title {
            text-align: center;
            font-weight: 600;
            font-size: 26px;
            margin-bottom: 30px;
            color: #343a40;
        }

        #Piechart_div {
            width: 100%;
            height: 600px;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "POST",
                dataType: "json",
                contentType: "application/json",
                url: '@Url.Action("VisualizeKitapResult", "Grafik")',
                success: function (result) {
                    google.charts.load('current', { packages: ['corechart'] });
                    google.charts.setOnLoadCallback(function () {
                        drawChart(result);
                    });
                }
            });
        });

        function drawChart(result) {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Name');
            data.addColumn('number', 'Stoklar');
            var dataArray = [];

            $.each(result, function (i, obj) {
                dataArray.push([obj.Ad, obj.Sayı]);
            });
            data.addRows(dataArray);

            var options = {
                title: 'Kitap - Yayınevi Grafiği',
                pieHole: 0.4,
                chartArea: { width: '90%', height: '80%' },
                legend: { position: 'right', textStyle: { fontSize: 14 } },
                colors: ['#007bff', '#28a745', '#ffc107', '#dc3545', '#6f42c1', '#20c997'],
                fontName: 'Poppins',
            };

            var chart = new google.visualization.PieChart(document.getElementById('Piechart_div'));
            chart.draw(data, options);
        }
    </script>

<div class="chart-container">
    <div class="chart-title">Kitap-Yayınevi Dağılımı</div>
    <div id="Piechart_div"></div>
</div>
