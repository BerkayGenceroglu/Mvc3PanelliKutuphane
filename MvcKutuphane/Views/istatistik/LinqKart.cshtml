@{
    ViewBag.Title = "LinqKart";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="..." />

    <!-- Font Awesome 6 CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <link href="~/web3/css/bootstrap.css" rel="stylesheet" />
    <link href="~/web3/css/component.css" rel="stylesheet" />
    <link href="~/web3/css/export.css" rel="stylesheet" />
    <link href="~/web3/css/style_grid.css" rel="stylesheet" />
    <link href="~/web3/css/style.css" rel="stylesheet" />

    <style>
        .ca-menu {
            list-style: none;
            padding: 0;
            margin: 10px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

            .ca-menu li {
                width: 300px;
                margin-bottom: 20px;
            }

                .ca-menu li a {
                    display: block;
                    text-decoration: none;
                    background-color: #f0f0f0;
                    padding: 20px;
                    text-align: center;
                    border-radius: 5px;
                    box-shadow: 2px 2px 5px #ccc;
                }

                .ca-menu li i {
                    font-size: 30px;
                    margin-bottom: 10px;
                    color: #333;
                }

        .ca-main {
            font-size: 18px;
            margin: 10px auto;
            font-weight: bold;
            color: #000000;
            margin-bottom: 5px;
        }

        .ca-sub {
            font-size: 14px;
            color: #f0f0f0;
            margin: 10px auto;
        }

        .ca-main.one, .ca-main.two, .ca-main.three {
            color: #000000;
            margin: 10px auto;
        }

        .ca-sub.one, .ca-sub.two, .ca-sub.three {
            color: #f0f0f0;
            margin: 10px auto;
        }
    </style>
</head>
<body>
    <div class="clearfix"></div>

    <ul class="ca-menu">
        <li>
            <a href="#">
                <i class="fa fa-book"></i>
                <div class="ca-content">
                    <h4 class="ca-main">@ViewBag.kitap</h4>
                    <h3 class="ca-sub">Kitap Sayımız</h3>
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fas fa-users"></i>
                <div class="ca-content">
                    <h4 class="ca-main one">@ViewBag.uye</h4>
                    <h3 class="ca-sub one">Üye Sayımız</h3>
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fas fa-sack-dollar"></i>
                <div class="ca-content">
                    <h4 class="ca-main two">@ViewBag.kasa</h4>
                    <h3 class="ca-sub two">Kasadaki Tutar</h3>
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fa-solid fa-book-bookmark"></i>
                <div class="ca-content">
                    <h4 class="ca-main three">@ViewBag.emanet</h4>
                    <h3 class="ca-sub three">Ödünçteki Kitaplar</h3>
                </div>
            </a>
        </li>
    </ul>

    <ul class="ca-menu">
        <li>
            <a href="#">
                <i class="fas fa-layer-group"></i>
                <div class="ca-content">
                    <h4 class="ca-main">@ViewBag.kategorisayısı</h4>
                    <h3 class="ca-sub">Kategori Sayımız</h3>
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fas fa-user-check"></i>
                <div class="ca-content">
                    <h4 class="ca-main one">@ViewBag.enAktifÜye</h4>
                    <h3 class="ca-sub one">En Aktif Üye</h3>
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fa-solid fa-book-open-reader"></i>
                <div class="ca-content">
                    <h4 class="ca-main two">@ViewBag.enÇokOkunanKitap</h4>
                    <h3 class="ca-sub two">En Çok Okunan Kitap</h3>
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fa-solid fa-user-tie"></i>
                <div class="ca-content">
                    <h4 class="ca-main three">@ViewBag.enFazlaKitapYazar</h4>
                    <h3 class="ca-sub three">En Fazla Kitabı Olan Yazar</h3>
                </div>
            </a>
        </li>
    </ul>

    <ul class="ca-menu">
        <li>
            <a href="#">
                <i class="fas fa-building-columns"></i>
                <div class="ca-content">
                    <h4 class="ca-main">@ViewBag.enfazlayayınevi</h4>
                    <h3 class="ca-sub">En İyi Yayınevi</h3>
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fa-solid fa-handshake"></i>>
                <div class="ca-content">
                    <h4 class="ca-main one">@ViewBag.enBaşarılıPersonel</h4>
                    <h3 class="ca-sub one">En Başarılı Personel</h3>
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fa-solid fa-envelope"></i>
                <div class="ca-content">
                    <h4 class="ca-main two">@ViewBag.toplammesaj</h4>
                    <h3 class="ca-sub two">Toplam Mesaj Sayısı</h3>
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fa-solid fa-truck"></i>
                <div class="ca-content">
                    <h4 class="ca-main three">@ViewBag.oduncVerilenKitapBugün</h4>
                    <h3 class="ca-sub three">Bugünkü Emanetler</h3>
                </div>
            </a>
        </li>
    </ul>
</body>
</html>


