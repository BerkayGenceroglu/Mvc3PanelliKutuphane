
@{
    ViewBag.Title = "Fotograflar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fotoğraflar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="background-color: #f8f9fa; padding: 1.5rem 0;">

    <div class="container">
        <h2 class="text-center mb-2 fw-bold display-6" style="color:saddlebrown;">Kütüphanemizden Fotoğraflar</h2>

        <div class="card shadow-lg border-0 rounded-4 p-3">
            <div class="card-body p-0">
                <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></button>
                        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1"></button>
                        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2"></button>
                        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="3"></button>
                        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="4"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/web2/Resimler/library.jpeg" class="d-block w-100 rounded-4" style="height: 600px; object-fit: cover;" alt="Foto 1">
                        </div>
                        <div class="carousel-item">
                            <img src="~/web2/Resimler/library 2.jpg" class="d-block w-100 rounded-4" style="height: 600px; object-fit: cover;" alt="Foto 2">
                        </div>
                        <div class="carousel-item">
                            <img src="~/web2/Resimler/library 6.jpg" class="d-block w-100 rounded-4" style="height: 600px; object-fit: cover;" alt="Foto 3">
                        </div>
                        <div class="carousel-item">
                            <img src="~/web2/Resimler/library 9.jpeg" class="d-block w-100 rounded-4" style="height: 600px; object-fit: cover;" alt="Foto 4">
                        </div>
                        <div class="carousel-item">
                            <img src="~/web2/Resimler/library 8.jpeg" class="d-block w-100 rounded-4" style="height: 600px; object-fit: cover;" alt="Foto 5">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
                <!-- Carousel sonrası eklenecek alan -->
                <!-- Carousel kartı sonuna şu şekilde düzenlenmiş formu ekleyebilirsin -->
                <div class="mt-5">
                    <div class="card shadow-sm border-0 rounded-4 p-4">
                        <form method="post" action="/istatistik/ResimYükle" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="DosyaSec" class="form-label fw-semibold">Fotoğraf Dosyası Seçin</label>
                                <input type="file" name="Dosya" id="Dosya" class="form-control form-control-lg rounded-3 shadow-sm" accept="image/*" />
                            </div>
                            <div class="text-center mt-3">
                                <input type="submit" value="Yükle" class="btn btn-outline-warning btn-lg px-5 rounded-pill shadow-sm" />
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>

@*enctype="multipart/form-data": Bu çok önemli. Dosya gönderimi yapılacağı için bu kod dosya yükleme özelliğini aktif eder. Aksi halde dosya düzgün gönderilmez.*@

