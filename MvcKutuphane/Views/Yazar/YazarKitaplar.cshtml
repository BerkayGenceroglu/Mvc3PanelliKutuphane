@model List<MvcKutuphane.Models.Entity.TBLKITAP>

@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Sayfa Arka Planı -->
<div style="background-color: gainsboro; min-height: 100vh; padding-top: 50px;">

    <!-- Başlıklar -->
    <div class="text-center mb-4">
        <h2 class="mt-3" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #2a2727;">
         Yazar: @ViewBag.yazaradi
        </h2>
    </div>

    <!-- Kitap Tablosu -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="table-responsive shadow-lg p-4 mb-5 bg-white rounded">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr class="text-center">
                                <th>Kitap Adı</th>
                                <th>Kategori</th>
                                <th>Yayınevi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td>@item.AD</td>
                                    <td>@item.TBLKATEGORI.AD</td>
                                    <td>@item.YAYINEVI</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
